
<h1>Books</h1>

<p style="color:orange">You've read <%= @book_ranks.length%> books </p>

<table>
  <thead>
    <tr>
      <th>Pages</th>
      <th>Name</th>
      <th>Review</th>
      <th>Author</th>
      <th>Read</th>
      <th>Currently read</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.pages %></td>
        <td><%= book.name %></td>
        <td><%= book.review %></td>
        <td><%= book.author %></td>
        <td>
        <%= form_with(model: [current_user,book], url: user_book_read_path(book), method:'patch', class: "form-check-submit") do |form|%>
        <%= form.check_box :readBook, class: "check-box"%>
        <%end%>
        </td>
        <td>
        <%= form_with(model: [current_user,book], url: user_book_currentRead_path(book), method:'patch', class: "currentreadform") do |form|%>
        <%= form.check_box :current_book, class: "currentreadcheck"%>
        <%end%>
        </td>
        <td><%= link_to 'Show', user_book_path(book) %></td>
        <td><%= link_to 'Edit', edit_user_book_path(book) %></td>
        <td><%= link_to 'Destroy', user_book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_user_book_path %>
